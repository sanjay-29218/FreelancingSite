<div class="container">
    <h1 class="text-center">My Job Vacancies</h1>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="overview">
                <div class="add-gig-card">
                    <p class="text-center" style="margin-top: 40px;">
                        <a href="/add-new-vacancy" class="btn btn-success btn-lg">Add a new Vacancy Description</a>
                </div>
            </div>
            <div class="overview">
                <div class="list-orders-card">
                    <div class="table-margin">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Vacancy</th>
                                    <th>Title</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each vacancy}}
                                <tr>
                                    <td><img class="order-image-my-gig" src={{picture}} alt="..."></td>
                                    <td>{{title}}</td>
                                </tr>
                                
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>