<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="overview">
                <div class="text-center">Enter you Job details</div>
                <br>
                <div class="new-gig-card">
                    <form method="post">
                        <div class="form-group">
                            <label>Job title</label>
                            <input type="text" class="form-control" placeholder="I will do something" required name="gig_title">
                        </div>

                        <div class="form-group">
                            <label for="">Job price</label>
                            <input type="number" class="form-control" placeholder="Please enter price you want to set" required name="gig_price">
                        </div>

                        <div class="form-group">
                            <label for="">Job category</label>
                            <select required name="gig_category" class="form-control">
                                <option>Programming</option>
                                <option>Website</option>
                                <option>Design</option>
                                <option>Marketing</option>
                                <option>Others</option>
                            </select>
                        </div>

                        <div class="form-group input-group-lg">
                            <label>Job Description</label>
                            <input type="text" class="form-control" placeholder="Describe your gig" required name="gig_about" minlength="10" maxlength="100">
                        </div>

                        <button type="submit" class="btn btn-success btn-lg">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>